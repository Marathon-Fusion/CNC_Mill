; Move to ABSOLUTE Z position 
; Created by Cohen Weston on August 26, 2025
; Modified by Cohen Weston on August 26, 2025

M400

; Snapshot current user positions and soft limits
var zCur = move.axes[2].userPosition

var zOrg = move.axes[2].workplaceOffsets[0]

var zMin = move.axes[2].min
var zMax = move.axes[2].max

M291 P"Move to ABSOLUTE Z position (relative to USER DEFINED origin)?" S3 J2
if result == -1
  abort "Move cancelled"


else
  ; Compute safe relative bounds so soft limits cannot be exceeded
  var zLow = var.zMin - var.zOrg
  var zHigh = var.zMax -  var.zOrg

  ; Z
  M291 R"Y" P{"Enter Z position (mm). Default = current<br>Allowed values: " ^ {var.zLow} ^  " to " ^ {var.zHigh}} S6 F{var.zCur} L{var.zLow} H{var.zHigh} J2
  if result == -1
    abort "Move cancelled"
  var dz = input

  ; Feedrate (mm/min)
  M291 R"Feedrate" P"Enter F in mm/min" S5 F3000 L1 J2
  if result == -1
    abort "Move cancelled"
  var feedR = input

  G94
  G90 G1 z{var.dz} F{var.feedR}
